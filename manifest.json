{
  "manifest_version": 3,
  "name": "Shein Sale Item Highlighter",
  "version": "1.0",
  "description": "Highlights items on sale across Shein faster \n Published by AprilYZL",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Shein Sale Highlighter"
  }
}
